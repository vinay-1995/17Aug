<!-- @format -->

<!DOCTYPE html>
<html>
  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('common/header') %>

    <h2>Cart Details</h2>

    <ul class="timeline">
          <table>
 <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total Price</th>
        </tr>
      <% for (let i = 0; i < items.length; i++) { %>
         <tr>
          <th>   <%= items[i].name %></th>
          <th>$<%= items[i].price %></th>
          <th>  <%= items[i].count %></th>
          <th>  $<%= items[i].totalPrice %></th>
          </tr>
          <% } %>
          <th>Cart Total</th>
          <th></th>
          <th></th>
          <th>$<%=total%></th>
  </body>
</html>
